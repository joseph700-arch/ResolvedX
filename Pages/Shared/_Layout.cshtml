<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ResolvedX</title>
    <style type="text/css">
        body {
            background-image:url();
            Margin: 0;
        }

        p {
            line-height: .4em;
        }   
    </style>
    <base href="~/" />
    <link rel="preconnect" href="http://fonts.gstatic.com"/>
    <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@600&family=Open+Sans:wght@300&display=swap" rel="stylesheet">

    <link href="_content/MudBlazor/MudBlazor.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="~/css/site.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/js/facebookScripts.js"></script>
    <script src="~/js/site.js"></script>
    <script src="https://msgsndr.com/js/form_embed.js"></script>
    <script src="_content/BlazorInputFile/inputfile.js"></script>

    <meta name="application-name" content="&nbsp;" />
    <meta name="msapplication-TileColor" content="#FFFFFF" />
    <meta name="msapplication-TileImage" content="~/favicons/mstile-144x144.png" />
    <meta name="msapplication-square70x70logo" content="~/favicons/mstile-70x70.png" />
    <meta name="msapplication-square150x150logo" content="~/favicons/mstile-150x150.png" />
    <meta name="msapplication-wide310x150logo" content="~/favicons/mstile-310x150.png" />
    <meta name="msapplication-square310x310logo" content="~/favicons/mstile-310x310.png" />

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom-0 box-shadow mb-0">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index"><h1><img src="~/lib/Logo.png" /></h1></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-page="/Features">Features</a>
                        </li>
                        <li class="item">
                            <a class="nav-link text-white" asp-area="" asp-page="/Industry">Industry</a>                          
                        </li>
                        <li class="item">
                            <a class="nav-link text-white" asp-area="" asp-page="/Schedule a Call">Schedule a Call</a>                          
                        </li>
                        <li class="item">
                            <a class="nav-link text-white" asp-area="" asp-page="/Pricing">Pricing</a>                          
                        </li>
                    </ul>
                </div>
                <div class="collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <a class="navbar-brand" asp-area="" asp-page="/Index"><img src="~/lib/user_profile_place_holder3.png" />Login</a>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-page="/Sign Up">Sign up</a>
                        </li>
                    </ul>
                    
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderSection("head", required: false)
            @RenderBody()
        </main>
    </div>

    <footer class="border-top-0 text-black footer text-muted">
        <div class="container">
            <p>Contact Us</p>
            &copy; 2021 - Address: Chillicothe, Ohio. 
Number: 1.800.957.0000 ResolvedX
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
   
</body>
</html>
